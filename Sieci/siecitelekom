USER5 {                             
        instance-type virtual-router;   
        interface ge-0/0/1.503;         
        interface ge-0/0/1.505;         
        interface ge-0/0/1.506;         
        interface ge-0/0/1.507;         
        interface ge-0/0/1.516;         
        interface lo0.5;                
        routing-options {               
            autonomous-system 5;        
        }                               
        protocols {                     
            bgp {                       
                export U5-FROM-OSPF;    
                group TO_AS11 {         
                    type external;      
                    peer-as 11;         
                    neighbor 1.5.11.2;  
                }                       
                group INTERNEL {        
                    type internal;      
                    local-address 192.168.5.183;
                    neighbor 192.168.5.187;
                    neighbor 192.168.5.188;
                }                       
                group TO_AS10 {         
                    type external;      
                    peer-as 10;         
                    neighbor 10.5.10.2; 
                }                       
            }                           
            ospf {                      
                area 0.0.0.0 {          
                    interface lo0.5 {   
                        passive;        
                    }                   
                    interface ge-0/0/1.505;
                    interface ge-0/0/1.507;
                    interface ge-0/0/1.506;
                }                       
            }                           
        }                               
    }              
